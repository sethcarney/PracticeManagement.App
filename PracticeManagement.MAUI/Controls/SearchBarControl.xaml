<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeManagement.MAUI.Controls.SearchBarControl">

    <Border>
        <Grid HeightRequest="50"  VerticalOptions="Start" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Entry Grid.Row="0" Grid.Column="0" TextChanged="Query_TextChanged" Placeholder="Enter text" Text="{Binding QueryText}"></Entry>
            <ImageButton Scale=".4" HorizontalOptions="Center" Grid.Column="2" Grid.Row="0" Command="{Binding SearchCommand}" Source="search_icon.png"/>
            <ImageButton Scale=".4" HorizontalOptions="Center" Grid.Column="1" Grid.Row="0" Source="refresh.png"/>

        </Grid>
    </Border>
</ContentView>
