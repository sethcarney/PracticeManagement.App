<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeManagement.MAUI.Views.ClientViewDetail">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Entry Grid.Row="0" Text="{Binding Path=UpdatedName, Mode=TwoWay}"></Entry>
            <Entry Grid.Row="1" Text="{Binding Path=UpdatedNotes, Mode=TwoWay}"></Entry>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Text="Cancel" Clicked="Cancel_Clicked"></Button>
                <Button Grid.Column="1" Text="Submit" Clicked="Submit_Clicked"></Button>
            </Grid>   
            
        </Grid>
    </ScrollView>

</ContentPage>
