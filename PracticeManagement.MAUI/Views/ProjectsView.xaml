<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeManagement.MAUI.Views.ProjectsView">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <!-- * makes it relative to operating system and screen-->
                <RowDefinition Height="1*"/>
                <RowDefinition Height="12*"/>
                
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Entry Grid.Column="0"  Text="{Binding Path=Query, Mode=TwoWay}" TextChanged="Search_Clicked"></Entry>
                <Button Grid.Column="1" Text="Search" Clicked="Search_Clicked"></Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
               
                
                <ListView Grid.Column="0" ItemsSource="{Binding Path=Projects}"
                          SelectedItem="{Binding Path=SelectedProject, Mode=TwoWay}">
                    
                </ListView>

                 


              
                <VerticalStackLayout Grid.Column="1" 
                                     Spacing="25"
            Padding="30,0"
            VerticalOptions="CenterAndExpand">
                   
                    <Button Text="Add" Clicked="Add_Clicked"></Button>
                    <Button Text="Edit" Clicked="Edit_Clicked"></Button>
                    <Button Text="Close" Clicked="Close_Clicked"></Button>
                    <Button Text="Delete" Clicked="Delete_Clicked" ></Button>
                    <Button Text="Back" Clicked="Back_Clicked"></Button>
                </VerticalStackLayout>
                
                
            </Grid>

           
        </Grid>
    </ScrollView>

</ContentPage>
