<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticeManagement.MAUI.Views.ProjectViewDetail"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui">

    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="9*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <VerticalStackLayout  Grid.Column="0" Margin="10" Spacing="30">
                    <Label  Text="Short Name :"></Label>
                    <Label  Text="Long Name :"></Label>
					<Label  Text="Client :"></Label>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1" Margin="10" Spacing="20">
                    <Entry  Text="{Binding Path=UpdatedShortName, Mode=TwoWay}"></Entry>
                    <Entry  Text="{Binding Path=UpdatedLongName, Mode=TwoWay}"></Entry>
					<Picker Title="Select a Client"
        ItemsSource="{Binding Clients}"
        ItemDisplayBinding="{Binding printVal}"
        SelectedItem="{Binding SelectedClient}" />
					
					
                </VerticalStackLayout>

            </Grid>


            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center">

                <Button   Text="Cancel" Clicked="Cancel_Clicked"></Button>
                <Button   Text="Submit" Clicked="Submit_Clicked"></Button>
            </HorizontalStackLayout>
            

            
               
             
            
                
            </Grid>

    
    </ScrollView>
</mct:Popup>